{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES2018",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": false,
      "isolatedModules": true,
      "strictNullChecks": true,
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7",
        "ES2021"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": [
      "**/*.ts"
    ]
}